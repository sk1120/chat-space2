.message-list{data: {message: {id: message.id}}}
  %ul.message-list__info
    %li.message-list__name
      = message.user.name
    %li.message-list__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.message-list__text
    - if message.content.present?
      = message.content
    - if message.image.present?
      = image_tag message.image.url